  "version": "0.2.0",
  "configurations": [
    {
      "type": "msedge",
      "request": "launch",
      "name": "Launch Edge against localhost",
      "url": "${input:launch-fiba-ui}",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "inputs": [
    {
      "id": "launch-fiba-ui",
      "type": "pickString",
      "options": [
        { "label": "POKEDEX-UI", "value": "http://localhost:4100" }
      ],
      "default": "http://localhost:4100",
      "description": "Launch POKEDEX UI as default"
    }
  ]
}